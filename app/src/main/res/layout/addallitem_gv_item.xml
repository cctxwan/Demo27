<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_80_dip"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_allitem"
        android:layout_width="@dimen/dimen_80_dip"
        android:layout_height="@dimen/dimen_40_dip"
        android:background="@drawable/gv_text_ty"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16_dip">

    </TextView>

    <ImageView
        android:id="@+id/img_allitem"
        android:layout_width="@dimen/dimen_20_dip"
        android:layout_height="@dimen/dimen_20_dip"
        android:layout_gravity="right|top"
        android:layout_marginRight="@dimen/dimen_20_dip"
        android:src="@mipmap/close"/>

</FrameLayout>