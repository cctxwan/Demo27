<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lin_py"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_py_load"
            android:src="@mipmap/load"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:layout_width="@dimen/dimen_50_dip"
            android:layout_height="@dimen/dimen_70_dip" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/dimen_15_dip"
            android:textColor="@color/darkgrey"
            android:text="@string/sel_by_py"
            android:layout_margin="@dimen/dimen_15_dip"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:background="@color/gainsboro" />

        <GridView
            android:id="@+id/xh_py_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@color/transparent"
            android:numColumns="6"
            android:divider="@null"/>

    </LinearLayout>

</LinearLayout>