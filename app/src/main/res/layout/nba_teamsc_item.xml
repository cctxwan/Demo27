<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="@color/darkgrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150_dip"
        android:layout_margin="@dimen/dimen_15_dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nbasc_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_18_dip" />

            <TextView
                android:id="@+id/txt_nbasc_gametime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="比赛时间："
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_18_dip" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_nbasc_teamzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主队"
                android:layout_margin="@dimen/dimen_8_dip"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_22_dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8_dip"
                android:text="VS"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:id="@+id/txt_nbasc_teamke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主队"
                android:layout_margin="@dimen/dimen_8_dip"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_22_dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_nbasc_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8_dip"
                android:text="比分：100-110"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_18_dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_nbasc_gamevideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8_dip"
                android:text="比赛视频"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_18_dip"/>

            <TextView
                android:id="@+id/txt_nbasc_gamecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_8_dip"
                android:text="技术统计"
                android:textColor="@color/darkgrey"
                android:textSize="@dimen/dimen_18_dip"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>