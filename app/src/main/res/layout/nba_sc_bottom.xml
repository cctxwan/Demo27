<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/dimen_23_dip"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_60_dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nba_txt_aboutpopsc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/teamsc"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/dimen_23_dip" />

        <TextView
            android:id="@+id/nba_txt_aboutpopsc_cancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dimen_23_dip"
            android:text="@string/cancle"
            android:textColor="@color/darkgrey"
            android:textSize="@dimen/dimen_20_dip" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:layout_margin="@dimen/dimen_8_dip"
        android:background="@color/darkgrey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/nba_sc_rv"
        android:background="@drawable/rv_bg"
        android:layout_width="@dimen/dimen_450_dip"
        android:layout_height="@dimen/dimen_360_dip" />

</LinearLayout>