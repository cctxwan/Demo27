<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70_dip">

        <ImageView
            android:id="@+id/fourlv_item_img"
            android:layout_width="@dimen/dimen_40_dip"
            android:layout_height="@dimen/dimen_40_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/dimen_30_dip"
            android:layout_marginStart="@dimen/dimen_30_dip" />

        <TextView
            android:id="@+id/fourlv_item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_18_dip"
            android:text="曼曼"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:layout_marginStart="@dimen/dimen_15_dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/fourlv_item_img"
            android:layout_toEndOf="@+id/fourlv_item_img" />

        <ImageView
            android:id="@+id/fourlv_item_stateimg"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_marginEnd="@dimen/dimen_25_dip"
            android:layout_marginRight="@dimen/dimen_25_dip"
            app:srcCompat="@mipmap/reghtarrows"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="@color/darkgrey"/>

</LinearLayout>