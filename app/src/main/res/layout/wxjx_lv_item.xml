<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_15_dip"
    android:paddingTop="@dimen/dimen_15_dip">

    <LinearLayout
        android:id="@+id/lin_allwxjx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_15_dip"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wxjx_img_url"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200_dip"
            android:src="@mipmap/zwtp"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_0.5_dip"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:background="@color/darkgrey"/>

        <TextView
            android:id="@+id/wxjx_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:textColor="@color/darkgrey"
            android:text="@string/wxjx_title"
            android:textSize="@dimen/dimen_20_dip"/>

    </LinearLayout>

</LinearLayout>