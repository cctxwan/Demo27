<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lin_small"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8_dip"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/small_item_img"
        android:layout_width="@dimen/dimen_50_dip"
        android:layout_height="@dimen/dimen_50_dip"
        android:src="@mipmap/dt"/>

    <TextView
        android:id="@+id/small_item_name"
        android:layout_width="@dimen/dimen_50_dip"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_13_dip"
        android:textSize="@dimen/dimen_15_dip"/>

</LinearLayout>