<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lin_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fourgv_item_img"
        android:layout_width="@dimen/dimen_44_dip"
        android:layout_height="@dimen/dimen_44_dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/fourgv_item_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourgv_item_img"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_3_dip"
        android:text="@string/bottom_four"
        android:textColor="@color/grey"
        android:textSize="@dimen/dimen_18_dip" />

    <ImageView
        android:id="@+id/fourgv_img_rr"
        android:layout_width="@dimen/dimen_10_dip"
        android:layout_height="@dimen/dimen_10_dip"
        android:layout_alignEnd="@+id/fourgv_item_img"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_15_dip"
        android:src="@drawable/round_textview" />

</RelativeLayout>