<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TeamVSActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/teamvs"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_22_dip" />

        <ImageView
            android:id="@+id/nbavs_img_back"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10_dip"
            app:srcCompat="@mipmap/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_23_dip"
                android:textSize="@dimen/dimen_16_dip"
                android:textColor="@color/material_red"
                android:text="注：所查信息以年份查询，并根据主、客队为两个条件去筛选。"/>

            <TextView
                android:id="@+id/txt_vs_huhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="◀主队客队互换▶"
                android:background="@color/cyan"
                android:layout_marginLeft="@dimen/dimen_23_dip"
                android:textSize="@dimen/dimen_18_dip"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/img_vs_load"
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="@dimen/dimen_70_dip"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_23_dip"
                android:src="@mipmap/load"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_vs"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>