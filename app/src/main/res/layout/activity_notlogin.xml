<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/transparent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_230_dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_notlogin"
            android:layout_width="@dimen/dimen_200_dip"
            android:layout_height="@dimen/dimen_50_dip"
            android:text="@string/notlogin"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_23_dip"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>