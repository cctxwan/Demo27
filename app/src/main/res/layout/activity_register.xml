<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cc.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40_dip"
        android:background="@color/cyan"
        android:id="@+id/linearLayout2">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dimen_20_dip"
            android:layout_height="@dimen/dimen_20_dip"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@mipmap/back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_23_dip"
            android:text="@string/register"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_account"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="@string/optaccount"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/ooi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/account" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="1234567890"
                android:hint="@string/optpass"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_getpass"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/opg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/pass" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_compass"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="1234567890"
                android:hint="@string/compass"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_compass"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/opg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/pass" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/register"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@mipmap/txt_bg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_5_dip">

            <CheckBox
                android:id="@+id/cb_check"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_30_dip"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:text="@string/look_yhxy" />

            <TextView
                android:id="@+id/txt_yhxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cyan"
                android:textSize="13sp"
                android:text="@string/yhxy" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>