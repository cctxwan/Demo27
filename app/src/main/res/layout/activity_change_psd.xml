<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.NBAActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cyan">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/change_psd"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_22_dip" />

        <ImageView
            android:id="@+id/changepsd_img_back"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="@dimen/dimen_30_dip"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10_dip"
            app:srcCompat="@mipmap/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_old_psd"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="1234567890"
                android:hint="@string/old_psd"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_old_getpass"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/opg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/pass" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_new_psd"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="1234567890"
                android:hint="@string/new_psd"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_new_getpass"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/opg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/pass" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_com_psd"
                android:layout_width="@dimen/dimen_370_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:background="@null"
                android:digits="1234567890"
                android:hint="@string/com_psd"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_com_getpass"
                    android:layout_width="@dimen/dimen_28_dip"
                    android:layout_height="@dimen/dimen_28_dip"
                    app:srcCompat="@mipmap/opg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_50_dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_30_dip"
                    android:layout_height="@dimen/dimen_30_dip"
                    android:src="@mipmap/pass" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:background="@mipmap/txt_while"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/psd_txt_com"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/commit"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:background="@mipmap/txt_bg"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/dimen_450_dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_15_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_forget_psd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                android:text="@string/forget_psd"
                android:textColor="@color/red"
                android:textSize="@dimen/dimen_16_dip" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>