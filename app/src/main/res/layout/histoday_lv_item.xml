<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_15_dip"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_yltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2008.8.8"
                android:textSize="@dimen/dimen_15_dip"/>

            <TextView
                android:id="@+id/txt_nltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2008.6.28（农历）"
                android:textSize="@dimen/dimen_13_dip"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_10_dip"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="@dimen/dimen_0.5_dip"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/darkgrey" />

            <com.cc.utils.RoundImageView
                android:layout_width="@dimen/dimen_40_dip"
                android:layout_height="@dimen/dimen_40_dip"
                android:src="@mipmap/f"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_lss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dimen_20_dip"
                android:layout_marginTop="@dimen/dimen_30_dip"
                android:text="这是标题"
                android:textSize="@dimen/dimen_17_dip" />

            <ImageView
                android:id="@+id/img_pic"
                android:layout_width="@dimen/dimen_60_dip"
                android:layout_height="@dimen/dimen_60_dip"
                android:layout_alignStart="@+id/txt_lss_title"
                android:layout_below="@+id/txt_lss_title"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:src="@mipmap/ws" />

            <TextView
                android:id="@+id/txt_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_pic"
                android:layout_alignStart="@+id/txt_lss_title"
                android:textSize="@dimen/dimen_15_dip"
                android:layout_marginTop="@dimen/dimen_8_dip"
                android:text="这是简介"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:background="@color/darkgrey"/>

</LinearLayout>